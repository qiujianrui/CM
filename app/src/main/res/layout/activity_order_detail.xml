<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorsBG"
    tools:context="com.chumeng.yxfz.Activity.OrderDetailActivity">
     <include layout="@layout/title_bar_back"/>
        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:background="@color/white"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           >
           <ImageView
               android:layout_width="20dp"
               android:layout_height="25dp"
               android:src="@mipmap/ic_dindan"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="订单信息"
               android:textSize="@dimen/tvListContent"
               android:paddingLeft="5dp"
               android:textColor="@color/colorTvTitle"
               android:includeFontPadding="false"
               />
       </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="订单标题:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="订单状态:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="订单编号:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="订单类型:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="游戏区服:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/tv_start_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="开始段位:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_end_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorsTvContent"
            android:textSize="@dimen/tvListContent"
            android:text="结束段位:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        </LinearLayout>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17￥"
                android:textSize="30sp"
                android:textColor="#ef3434"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_beizhu"
            android:scaleType="fitXY"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textSize="@dimen/tvListContent"
            android:paddingLeft="5dp"
            android:textColor="@color/colorTvTitle"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorsTvContent"
        android:textSize="@dimen/tvListContent"
        android:hint="备注:"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />
    </LinearLayout>
        </ScrollView>
    <Button
        android:id="@+id/btn_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="接单"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        />

</LinearLayout>
